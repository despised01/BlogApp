@page
@model API.Models.ViewModels.CreateRoleViewModel
@{
    Layout = "Shared/_Layout.cshtml";
    ViewData["Title"] = "AddRole";
}
<div class="block-reg background-white">
    <h3 class="center">Добавление новой роли</h3>
    <form class="frm" method="post" asp-controller="Role" asp-action="AddRole">
        <div asp-validation-summary="ModelOnly"></div>
        <div>
            <h6>Введите название</h6>
            <div class="mrgn">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div>
            <h6>Введите описание</h6>
            <div class="mrgn">
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
        </div>
        <div>
            <input class="enter_submit" type="submit" value="Создать" />
        </div>
    </form>
</div>