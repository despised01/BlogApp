@page
@model API.Models.ViewModels.LoginViewModel
@{
    Layout = "Shared/_Layout.cshtml";
    ViewData["Title"] = "LoginPage";
}

<div class="block-reg background-white">
    <h4 class="center">Добро пожаловать!</h4>
    <form method="post" asp-controller="Account" asp-action="Login">
        <div asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="mrgn">
                <label asp-for="Login"></label><br />
                <input asp-for="Login" />
                <span asp-validation-for="Login"></span>
            </div>
        </div>
        <div>
            <div class="mrgn">
                <label asp-for="Password"></label><br />
                <input asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
        </div>
        <div>
            <input type="checkbox" asp-for="RememberMe" value="true"> Да<Br>
        </div>
        <div>
            <input type="submit" value="Войти" />
        </div>
    </form>
</div>
