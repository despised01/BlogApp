@page "{id}"
@model API.Views.Pages.TagUpdatePageModel
@{
    Layout = "Shared/_Layout.cshtml";
    ViewData["Title"] = "TagUpdate";
}

<div class="block-reg background-white">
    <h3 class="center">Добавление нового тэга</h3>
    <form class="frm" method="post" asp-controller="Tag" asp-action="TagUpdateById" asp-route-id="@Model.Id">
        <div asp-validation-summary="ModelOnly"></div>
        <div>
            <h6>Введите название</h6>
            <div class="mrgn">
                <input asp-for="Name" class="form-control" value="@Model.tag.TagName" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div>
            <input class="enter_submit" type="submit" value="Создать" />
        </div>
    </form>
</div>
